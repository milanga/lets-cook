        <!--<item name="android:windowSharedElementEnterTransition">-->
            <!--@transition/shared_transition</item>-->
        <!--<item name="android:windowSharedElementExitTransition">-->
            <!--@transition/shared_transition</item>-->
    </style>

    <style name="AppTheme.NoActionBar.Details">
        <item name="android:windowSharedElementEnterTransition">@transition/shared_transition</item>
        <!--<item name="android:windowEnterTransition">@transition/list_reenter</item>-->
    </style>

    <style name="AppTheme.NoActionBar.Home">
        <item name="android:windowExitTransition">@transition/list_exit</item>
        <item name="android:windowReenterTransition">@transition/list_reenter</item>
    </style>


</resources>
